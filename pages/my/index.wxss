/* pages/my/index.wxss */
.head {
  padding: 40rpx 30rpx;
  height: 100rpx;
  background-color: #fff;
  box-shadow: #ebebeb 0 0 5px;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.head .pic{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px solid #ebebeb;
  overflow: hidden;
  margin-right: 30rpx;
}
.head .pic image{
  width: 100%;
  height: 100%;
  min-height: 100%;
}
.head  .h1{
  font-size: 30rpx;
}
.head  button{
  margin: 0;
  background-color: transparent;
  color: #333;
  font-size: 30rpx;
}
.head  button::after{
  border: none;
}