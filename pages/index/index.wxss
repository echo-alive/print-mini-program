/* pages/print/index.wxss */

.banner {
  width: 100%;
  height: calc((100vw - 60rpx) * 0.466);
  border-radius: 10rpx;
  overflow: hidden;
}

.banner swiper {
  width: 100%;
  height: 100%;
}

.banner swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  overflow: hidden;
}

.banner image {
  width: 100%;
  display: block;
}

.items {
  width: 100%;
  margin: 15rpx auto;
  padding: 10rpx 0;
  overflow: hidden;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.items .left {
  width: calc((100% - 90rpx) / 2);
  margin-right: 30rpx;
  height: 250rpx;
  padding: 50rpx 30rpx;
  background-color: #fff;
  box-shadow: #ebebeb 0 0 5px;
  border-radius: 10px;
  background-repeat: no-repeat;
  background-position: 98% 98%;
  background-size: 60%;
}



.items .left .h1 {
  font-size: 36rpx;
  font-weight: bold;
}

.items .left  .des {
  font-size: 20rpx;
  color: #ccc;
  margin-top: 15rpx;
}

.items .right {
  width: calc((100% - 30rpx) / 2);
}

.items .right .lite {
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  background-color: #fff;
  font-size: 26rpx;
  box-shadow: #ebebeb 0 0 5px;
  border-radius: 10px;
}
.items .right .lite:last-child{
  margin-bottom: 0;
}
.items .right .lite image {
  width: 60rpx;
  margin-right: 10rpx;
}
