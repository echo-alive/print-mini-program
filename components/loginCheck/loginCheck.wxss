/* components/loginCheck/loginCheck.wxss */
/* 自定义模态框 */
.setting-modal {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  z-index: 10001;
}
.setting-modal-content {
  position: absolute;
  width: 75%;
  left: 12.5%;
  top: 400rpx;
  background-color: #fff;
  padding-top: 40rpx;
  text-align: center;
}
.setting-modal-title {
  font-size: 32rpx;
  color: #000000;
}
.setting-modal-title image{
  width: 80rpx;
  height: 80rpx;
}
.setting-modal-desc {
  font-size: 26rpx;
  color: #666666;
  margin: 20rpx 0 48rpx;
  padding: 0 24rpx;
}
.setting-modal-btns {
  border-top: 1px solid #E5E5E5;
  overflow: hidden;
}
.setting-modal-btns button {
  float: left;
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  border:none;
}
button.cancel-btn {
  border: none;
  border-right: 1px solid #e5e5e5;
  color: #000;
}
button.submit-btn {
  border: none;
  color: #09BB07;
}